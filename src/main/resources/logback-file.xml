<configuration>
  	<springProperty name="logBaseDirectory" source="spring.logdirectory" /> 
  	<springProperty name="applicationName" source="spring.application.name" /> 
  	<springProperty name="loglevel" source="loglevel" /> 
	<property scope="context" name="maxFileErrorCount" value="30" />
	<property scope="context" name="maxFileInfoCount" value="15" />
	<property scope="context" name="maxFileTraceCount" value="30" />
	<property scope="context" name="maxFileSize" value="30MB" />
	<property scope="context" name="logPattern"
		value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} | %-5.5p | [%t]%C{1}.%M|%L|%-15m %n" />

	<appender name="RollingFileInfo"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${logBaseDirectory}/${applicationName}-info.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${logBaseDirectory}/archive/${applicationName}-info-%i.log.zip
			</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>${maxFileInfoCount}</maxIndex>
		</rollingPolicy>

		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>${maxFileSize}</maxFileSize>
		</triggeringPolicy>

		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>INFO</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>

		<encoder>
			<pattern>${logPattern}</pattern>
		</encoder>
	</appender>

	<appender name="RollingFileError"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${logBaseDirectory}/${applicationName}-error.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${logBaseDirectory}/archive/${applicationName}-error-%i.log.zip
			</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>${maxFileErrorCount}</maxIndex>
		</rollingPolicy>

		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>${maxFileSize}</maxFileSize>
		</triggeringPolicy>

		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>

		<encoder>
			<pattern>${logPattern}</pattern>
		</encoder>
	</appender>
	
	<appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
		<encoder>
			<pattern>${logPattern}</pattern>
		</encoder>
	</appender>

	<appender name="RollingFileTrace"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${logBaseDirectory}/${applicationName}-trace.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${logBaseDirectory}/archive/${applicationName}-trace-%i.log.zip
			</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>${maxFileTraceCount}</maxIndex>
		</rollingPolicy>

		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>${maxFileSize}</maxFileSize>
		</triggeringPolicy>


		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>TRACE</level>
			<onMatch>ACCEPT</onMatch>
		</filter>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>DEBUG</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>INFO</level>
			<onMatch>DENY</onMatch>
		</filter>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>WARN</level>
			<onMatch>DENY</onMatch>
		</filter>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>DENY</onMatch>
		</filter>

		<encoder>
			<pattern>${logPattern}</pattern>
		</encoder>
	</appender>


 	<root level="${loglevel}">
		<appender-ref ref="RollingFileInfo" />
		<appender-ref ref="RollingFileError" />
		<appender-ref ref="RollingFileTrace" />
		<appender-ref ref="Console" />
	</root>	

</configuration>